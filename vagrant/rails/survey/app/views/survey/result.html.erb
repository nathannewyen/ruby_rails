<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="container">
    <% if flash[:count]%>
    <div class="alert alert-success" role="alert">
        <p><strong>Well done!</strong> Thanks for submitting this form! You have submitted this form
            <%= flash[:count] %> times now.
        </p>
    </div>
    <% end %>

    <div class="result border">
        <h3>Submitted Information</h3>
        <p>Name: <%= flash[:name] %></p>
        <p>Dojo Location: <%= flash[:location] %></p>
        <p>Favorite Language: <%= flash[:language] %></p>
        <p>Comment: <%= flash[:comment] %></p>
        <button class="btn btn-primary"> <a href="/" class="text-light">Go back</a></button>
    </div>
</div>