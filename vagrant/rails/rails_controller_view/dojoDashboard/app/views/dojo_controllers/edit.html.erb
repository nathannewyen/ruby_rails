<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="container">
    <form action="/dojos/<%= @dojo.id %>/edit_process" method="post">
        <input type="hidden" name="_method" value="patch">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group row">
            <label for="branch" class="col-sm-2 col-form-label">Branch:</label>
            <div class="col-sm-10">
                <input type="text" name="dojo[branch]" class="form-control" placeholder="<%= @dojo.branch %> ">
            </div>
        </div>
        <div class="form-group row">
            <label for="street" class="col-sm-2 col-form-label">Street:</label>
            <div class="col-sm-10">
                <input type="text" name="dojo[street]" class="form-control" placeholder="<%= @dojo.street %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="city" class="col-sm-2 col-form-label">City:</label>
            <div class="col-sm-10">
                <input type="text" name="dojo[city]" class="form-control" placeholder="<%= @dojo.city %> ">
            </div>
        </div>
        <div class="form-group row">
            <label for="state" class="col-sm-2 col-form-label">State:</label>
            <div class="col-sm-10">
                <input type="text" name="dojo[state]" class="form-control" placeholder="<%= @dojo.state %>">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" class="btn btn-success">
                    <a href="/dojos/<%= @dojo.id  %>" class="text-light"> Show </a>
                </button>
            </div>
        </div>
    </form>
</div>