<div class="container">
    <div class="row">
        <div class="col-md-6">
            <%= yield :left_column  %>
            <h1>All Users</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Favorite Language</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user|%>
                    <tr>
                        <td><%= user.fname  %></td>
                        <td><%= user.lname  %></td>
                        <td><%= user.favorite_language  %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <%= yield :right_column  %>
            <h1>New User</h1>
            <form action="/users" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <div class="form-group">
                    <label for="fname">First Name</label>
                    <input type="text" name="user[fname]" class="form-control">
                </div>
                <div class="form-group">
                    <label for="lname">Last Name</label>
                    <input type="text" name="user[lname]" class="form-control">
                </div>
                <div class="form-group">
                    <label for="lang">Favorite Language</label>
                    <input type="text" name="user[favorite_language]" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary"> Submit </button>
            </form>
            <button class="btn btn-info  all-posts">
                <a href="/posts"> All Posts </a>
            </button>
        </div>
    </div>
</div>