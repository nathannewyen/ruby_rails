<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
        <% @all_user.each do |user| %>
            <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <a href="/users/new">
        <button type="submit" class="btn btn-primary">Create New User</button>
    </a>
</div>