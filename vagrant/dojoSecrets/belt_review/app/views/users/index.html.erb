<div class="container-fluid">
    <div class="jumbotron">
        <h1>Welcome to Events!</h1>
    </div>
    <!-- Login -->
    <div class="row">
        <div class="col">
            <h2><strong>Login</strong></h2>
            <form action="/sessions" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="user[email]" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="user[password]" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <h2><strong>Register</strong></h2>
            <form action="/users" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <div class="form-group row">
                    <label for="fname" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[fname]" class="form-control">
                        <% if @user.errors[:fname].any? %>
                        <ul>
                            <li class="text-danger"><%= @user.errors.full_messages_for(:fname).first %></li>
                            <% else %>
                            <li class="text-danger"><%= @user.errors.full_messages_for(:fname).second %></li>
                        </ul>
                        <% end %>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="user[lname]" class="form-control">
                        <% if @user.errors[:lname].any? %>
                        <ul>
                            <li class="text-danger">
                                <%= @user.errors.full_messages_for(:lname).first %></li>
                            <% else %>
                            <li class="text-danger"><%= @user.errors.full_messages_for(:lname).second %></li>
                        </ul>
                        <% end %>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="user[email]" class="form-control">
                        <% if @user.errors[:email].any? %>
                        <ul>
                            <li class="text-danger"><%= @user.errors.full_messages_for(:email).first %></li>
                            <% else %>
                            <li class="text-danger"><%= @user.errors.full_messages_for(:email).second %></li>
                        </ul>
                        <% end %>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-2 col-form-label">Location</label>
                    <div class="col-sm-5">
                        <input type="text" name="user[city]" class="form-control">
                        <% if @user.errors[:city].any? %>
                        <ul>
                            <li class="text-danger">
                                <%= @user.errors.full_messages_for(:city).first %>
                            </li>
                        </ul>
                        <% end %>
                    </div>
                    <div class="col-sm-5">
                        <select class="custom-select" name="user[state]">
                            <%= options_for_select(us_states)%>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="user[password]" class="form-control">
                        <% if @user.errors[:password].any? %>
                        <ul>
                            <li class="text-danger">
                                <%= @user.errors.full_messages_for(:password).first %>
                            </li>
                            <% else %>
                            <li class="text-danger">
                                <%= @user.errors.full_messages_for(:password).second %>
                            </li>
                        </ul>
                        <% end %>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="confirm-pw" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="user[password_confirmation]" class="form-control">
                        <% if @user.errors[:password_confirmation].any? %>
                        <ul>
                            <li class="text-danger">
                                <%= @user.errors.full_messages_for(:password_confirmation).first %>
                            </li>
                        </ul>
                        <% end %>
                    </div>
                </div>
                <div class="form-group row clearfix">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary float-right">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>